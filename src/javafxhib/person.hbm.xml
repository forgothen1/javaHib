<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="javafxhib.Person" table="person">
        <meta attribute="class-description">
            This class contains the person details 
        </meta>
        <id name="id" type="int" column="id">
            <generator class="increment"/>
        </id>
        <property name="ime" column="name" type="string"/>
        <property name="prezime" column="prezime" type="string"/>
        <property name="adresa" column="adresa" type="string"/>
        <property name="dohodak" column="dohodak" type="string"/>
    </class>
</hibernate-mapping>